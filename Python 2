class BankAccount:
    def __init__(self, initial_balance=0):
        self.balance = initial_balance
    
    def withdraw(self, amount):
        if amount > self.balance:
            raise ValueError("Ошибка: Недостаточно средств на счете!")
        if amount < 0:
            raise ValueError("Ошибка: Нельзя снять отрицательную сумму!")
        
        self.balance -= amount
        return self.balance
    
    def deposit(self, amount):
        if amount < 0:
            raise ValueError("Ошибка: Нельзя пополнить счет отрицательной суммой!")
        
        self.balance += amount
        return self.balance
    
    def get_balance(self):
        return self.balance


# Пример использования (как в условии задачи)
account = BankAccount(1000)
print(f"Ваш баланс: {account.get_balance()}")

try:
    withdraw_amount = 1500
    print(f"Введите сумму для снятия: {withdraw_amount}")
    account.withdraw(withdraw_amount)
except ValueError as e:
    print(e)
